<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrador.curso4_tarea5">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.administrador.curso4_tarea5.Activity.MainActivity"
            android:label="Mascotas"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.administrador.curso4_tarea5.Activity.Activity2"
            android:parentActivityName="com.example.administrador.curso4_tarea5.Activity.MainActivity">

            <!-- Soporte para versiones 4.0 o menores -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.administrador.curso4_tarea5.Activity.MainActivity" />
        </activity>
        <activity android:name="com.example.administrador.curso4_tarea5.Activity.FormularioActivity" />
        <activity
            android:name="com.example.administrador.curso4_tarea5.Activity.AcercadeActivity"
            android:label="@string/title_activity_acercade"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>